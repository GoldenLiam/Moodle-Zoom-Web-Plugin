<style>
    @import url("https://source.zoom.us/3.9.0/css/bootstrap.css");

    .sdk-select {
        height: 34px;
        border-radius: 4px;
        width: 100%;
    }

    #display_name {
        width: 250px;
    }
</style>

<div style="display: flex; justify-content: center; align-items: center;">
    <div class="jumbotron" style="width: 420px; box-shadow: 0 4px 16px #1a37601a; margin-top: 80px; border-radius: 4px;">
        <div class="container">
            <h3 class="text-center" style="color: #0b5cff; font-weight:bold; font-size: 22px; margin-top: 5px;">THÔNG TIN TÀI KHOẢN</h3>

            <div id="navbar" class="websdktest">
                <form id="meeting_form">

                    <div class="form-group">
                        <input style="width: 100%;" type="text" name="display_name" id="display_name" value="{{fullname}}" maxLength="100"
                            placeholder="Name" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <input style="width: 100%;" type="text" name="meeting_number" id="meeting_number" value="{{meeting_number}}" maxLength="200"
                            placeholder="Meeting Number" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <input style="width: 100%;" type="text" name="meeting_pwd" id="meeting_pwd" value="{{password}}" maxLength="32" 
                            placeholder="Meeting Password" class="form-control">
                    </div>

                    <div class="form-group" style="visibility: hidden; position: absolute;">
                        <input type="text" name="meeting_email" id="meeting_email" value="" style="width:150px"
                            maxLength="32" placeholder="Email option" class="form-control">
                    </div>

                    <div class="form-group">
                        <select id="meeting_role" class="sdk-select">
                            {{#options}}
                                <option value="{{value}}">{{label}}</option>
                            {{/options}}
                        </select>
                    </div>

                    <div class="form-group" style="visibility: hidden; position: absolute;">
                        <input type="text" name="zoom_user_role" id="zoom_user_role" value="{{zoom_user_role}}" style="width:150px"
                            maxLength="32" placeholder="Zoom user role" class="form-control">
                    </div>

                    <div class="form-group">
                        <select id="meeting_china" class="sdk-select" style="visibility: hidden; position: absolute;">
                            <option value=0>Global</option>
                            <option value=1>China</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <select id="meeting_lang" class="sdk-select">
                            <option value="en-US" {{#is_en}}selected{{/is_en}}>English</option>
                            <option value="vi-VN" {{#is_vi}}selected{{/is_vi}}>Tiếng Việt</option>
                        </select>
                    </div>

                    <input type="hidden" value="" id="copy_link_value" />
                    <button type="submit" class="btn btn-primary" style="width: 100%; background-color: #0e72ed; text-align: center; border-radius: 10px; 
                        font-weight: 700; color: #fff; font-size: 16px; cursor: pointer;" id="join_meeting">Tham gia</button>
                    <button style="visibility: hidden; position: absolute;" type="submit" class="btn btn-primary" id="clear_all">Clear</button>
                    <button style="visibility: hidden; position: absolute;" type="button" link="" onclick="window.copyJoinLink('#copy_join_link')"
                        class="btn btn-primary" id="copy_join_link">Copy Direct join link</button>

                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://source.zoom.us/3.9.0/lib/vendor/react.min.js"></script>
<script src="https://source.zoom.us/3.9.0/lib/vendor/react-dom.min.js"></script>
<script src="https://source.zoom.us/3.9.0/lib/vendor/redux.min.js"></script>
<script src="https://source.zoom.us/3.9.0/lib/vendor/redux-thunk.min.js"></script>
<script src="https://source.zoom.us/3.9.0/lib/vendor/lodash.min.js"></script>
<script src="https://source.zoom.us/3.9.0/zoom-meeting-3.9.0.min.js"></script>

<script src="/mod/ttthzoom/js/tool.js"></script>
<script src="/mod/ttthzoom/js/index.js"></script>